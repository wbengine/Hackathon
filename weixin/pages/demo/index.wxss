
.warp {
    width: 750rpx;
    height: 100vh;
    position: relative;
}

.warp image {
    width: 100%;
    height: 100%;
}



.text1 {
    width: 100%;
    height: 100px;
    line-height: 20px;
    text-align: left;
    color: #fff;
    position: absolute;
    top: 50%;
    left: 0%;
    margin-top: 0px;
    margin-left: 0px;
    border-radius: 5%;
    border-color: black;
    background-color: rgba(0, 153, 255, 0.5)
}


.text2 {
    width: 94%;
    height: 50px;
    line-height: 20px;
    text-align: center;
    color: #fff;
    position: absolute;
    float:left;
    left:3%;
    margin-top: 0px;
    margin-left: 0px;
    border-radius: 10%;
    border-color: black;
    background-color: rgba(102, 110, 116, 0.568)
}

.warp button {
    width: 60px;
    height: 60px;
    line-height: 60px;
    text-align: center;
    color: #fff;
    position: absolute;
    top: 90%;
    left: 50%;
    margin-top: 0;
    margin-left: -30px;
    border-radius: 50%;
    background-size:60px 60px;
    background-repeat:no-repeat;
}